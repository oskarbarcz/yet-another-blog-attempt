---
import "../styles/global.css";
import "../styles/article.css";
import { ThemeModeScript } from "flowbite-react";
import { ThemeInit } from "../../.flowbite-react/init";
import Navigation from "../components/shared/Navigation.tsx";
import Footer from "../components/shared/Footer.tsx";
import { DEFAULT_SITE_TITLE, SITE_TITLE_SUFFIX } from "../constants";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        (Astro.slots.has("title")
          ? await Astro.slots.render("title")
          : DEFAULT_SITE_TITLE) + SITE_TITLE_SUFFIX
      }
    </title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#40bf7e" />
    <meta name="msapplication-TileColor" content="#f8f9fa" />
    <meta name="theme-color" content="#40bf7e" />

    <slot name="head" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Roboto+Slab:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <ThemeModeScript client:load />
  </head>
  <body class="flex min-h-dvh flex-col">
    <ThemeInit />
    <Navigation client:load />
    <div
      id="page-content"
      class="flex-1 bg-linear-to-br from-gray-50 via-white to-gray-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
